doctype html
html(lang='en')
  include ../common/header.pug
  +head("Lodos E2")
  header
    include ../common/navbar.pug
    +navbar(user)
  sidebar
    include ../common/sidebar.pug
    +sidebar(user)
  body.bg-secondary
    .container
        form.form-horizontal.mt-5.bg-dark.rounded.pt-5.pb-3.text-light.h5.border.border-dark(action='/addUser', method='POST')
            .row
                .col-md-2
                .col-md-4
                    .form-group
                        label.control-label.col-sm-2(for='name') Ad:
                        input#email.form-control(type='text', name='name')
                .col-md-4
                    .form-group
                        label.control-label.col-sm-2(for='lastname') Soyad:
                        input#pwd.form-control(type='text',name='lastname')
            .row
                .col-md-2
                .col-md-4
                    .form-group
                        label.control-label.col-sm-2(for='email') Email:
                        input#email.form-control(type='email',name='email')
                .col-md-4
                    .form-group
                        label.control-label.col-sm-6(for='username') Kullanıcı Adı:
                        input#email.form-control(type='text',name='username')
            .row
                .col-md-2
                .checkbox
                    label.h4.mt-2.ml-3
                        |  Adminlik Yetkisi 
                        input(type='checkbox',name='isAdmin')

            .row
                .col-md-9
                .form-group
                    .col-sm-offset-2.col-sm-10
                    button.btn.btn-primary(type='submit') Kaydet


    include ../common/footer.pug
    +footer()
    script(src="/javascripts/formJS.js" type="text/javascript")
    script(src="/javascripts/adminPage.js" type="text/javascript")


    